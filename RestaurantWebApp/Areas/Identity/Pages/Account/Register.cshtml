@page
@model RegisterModel
@using Restaurant.Utility
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-8 mx-auto mt-5">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2>Create a new account.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating my-2">
                <input asp-for="Input.FirstName" class="form-control" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.FirstName">FirstName</label>
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
            <div class="form-floating my-2">
                <input asp-for="Input.LastName" class="form-control" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.LastName">LastName</label>
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>
            <div class="form-floating my-2">
                <input asp-for="Input.PhoneNumber" class="form-control" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.PhoneNumber">PhoneNumber</label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-floating my-2">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating my-2">
                <input asp-for="Input.Password" type="password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.Password">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating my-2">
                <input asp-for="Input.ConfirmPassword" type="password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-check-inline my-2">
                <input class="form-check-input" type="radio" name="rdUserRole" id="managerRole" value="@SD.ManagerRole">
                <label class="form-check-label" for="managerRole">@SD.ManagerRole</label>
            </div>

            <div class="form-check-inline my-2">
                <input class="form-check-input" type="radio" name="rdUserRole" id="kitchenRole" value="@SD.KitchenRole">
                <label class="form-check-label" for="kitchenRole">@SD.KitchenRole</label>
            </div>

            <div class="form-check-inline my-2">
                <input class="form-check-input" type="radio" name="rdUserRole" id="frontDeskRole" value="@SD.FrontDeskRole">
                <label class="form-check-label" for="frontDeskRole">@SD.FrontDeskRole</label>
            </div>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
